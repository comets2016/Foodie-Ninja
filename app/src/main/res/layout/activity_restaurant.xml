<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bxt140930.Foodieninja.FoodJointControllerActivity"
    android:background="#f5f5f5"
    android:padding="16dp"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@mipmap/subway"
            android:id="@+id/imageView"/>

        <TextView
            android:text="Subway"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/TVResNAme"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="48sp" />
    </LinearLayout>

    <TextView
        android:text="7:30am - 8:00pm "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:elevation="1dp"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="24sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:text="Estimated waiting time: 26 minutes "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="18sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:id="@+id/LLMenu">

        <ImageView
            app:srcCompat="@mipmap/menu"
            android:id="@+id/imrm"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <TextView
            android:text="See Item or Order"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rytn"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LLticket">

        <ImageView
            app:srcCompat="@mipmap/ticket"
            android:id="@+id/dtmdt"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <TextView
            android:text="Get Ticket"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/aevaeae"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="30sp" />
    </LinearLayout>

    <Button
        android:text="Sign Out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/BTNSignOut"
        android:layout_margin="0dp"
        android:padding="0dp" />
</LinearLayout>