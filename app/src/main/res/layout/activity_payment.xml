<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bxt140930.Foodieninja.FoodJointControllerActivity"
    android:background="#f5f5f5"
    android:padding="16dp"
    android:orientation="vertical">

    <TextView
        android:text="16.00$ "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TVPayment"
        android:elevation="1dp"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="24sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LLComet"
        android:visibility="gone">

        <ImageView
            app:srcCompat="@mipmap/comet"
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:text="Comet Card ********1526"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/TVResNAme"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="20sp" />
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <ImageView
            app:srcCompat="@mipmap/visa"
            android:id="@+id/imagedsddsView"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:text="Visa Card ********9855"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/TVRessdsdsdNAme"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:id="@+id/LLCOmet"
        android:gravity="center_vertical">

        <ImageView
            app:srcCompat="@mipmap/comet"
            android:id="@+id/imrm"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_weight="1"
            android:hint="UTD ID" />

    </LinearLayout>

    <Button
        android:text="Pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/BTNPay1" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LLVisa"
        android:gravity="center_vertical">

        <ImageView
            app:srcCompat="@mipmap/visa"
            android:id="@+id/dtmdt"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText2"
            android:layout_weight="1"
            android:hint="Card Number" />

    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText3"
        android:hint="Name on the Card" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText4"
            android:layout_weight="1"
            android:hint="Expiration" />



        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTfgbext4"
            android:layout_weight="1"
            android:hint="Pin" />
    </LinearLayout>

    <Button
        android:text="Pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/BTNPay2" />
</LinearLayout>