<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bxt140930.Foodieninja.FoodJointControllerActivity"
    android:background="#f5f5f5"
    android:padding="16dp"
    android:orientation="vertical">


    <TextView
        android:text="E-Ticket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ettt"
        android:elevation="1dp"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="48sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@mipmap/subway"
            android:id="@+id/IVLogo" />

        <TextView
            android:text="Subway"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/TVResName"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="48sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">

        <TextView
            android:text="SW384"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/TVNumber"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="60sp"
            android:layout_weight="1" />

        <ImageView
            app:srcCompat="@mipmap/qr"
            android:id="@+id/IVQR"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_weight="0" />

    </LinearLayout>

    <TextView
        android:text="Ticket date:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TVDate"
        android:elevation="1dp"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="24sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:text="Estimated Wait Time:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TVWaitTime"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="18sp" />

</LinearLayout>